<% content_for :title do %>
  <%= "#{ resource.name } | #{ t 'site.name' }" %>
<% end %>

<% content_for :description do %>
  <% if resource.profile.description? %>
    <%= resource.profile.description%>
  <% else %>
    <%= "#{ resource.name } #{ t 'profile.is_on' } #{ t 'site.name' }" %>
  <% end %>
<% end %>

<% content_for :keywords do %>
  <%= resource.tag_list%>
<% end %>

<%= render :partial => 'show' %>
